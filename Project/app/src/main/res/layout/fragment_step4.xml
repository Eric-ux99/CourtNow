<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16sp"
    android:background="@color/green">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badminton court booking confirmation"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/yellow"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="8sp"
        android:background="@drawable/rounded_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Thank you for booking with CourtNow !"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/green"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Booking Information"
            android:textAllCaps="true"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/green"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bookingTime"
                android:text="11AM at 01/09/2022"
                android:drawableStart="@drawable/ic_baseline_event_note_24"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bookingCourt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:fontFamily="@font/poppinsmedium"
                android:text="Court 1"
                android:textColor="@color/green"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="4sp"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <TextView
            android:id="@+id/complexName"
            android:text="Complex 1"
            android:textAllCaps="true"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/green"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/complexPhone"
                android:text="number"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/complexTime"
                android:text="time"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_baseline_access_time_filled_24"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/complexAddress"
                android:text="Address of complex 1"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:text="Confirm"
            android:layout_marginTop="8sp"
            android:backgroundTint="@color/green"
            android:textColor="@color/yellow"
            android:fontFamily="@font/poppinsbold"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>