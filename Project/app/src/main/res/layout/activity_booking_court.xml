<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingCourt"

    android:padding="16sp"
    android:background="@color/green">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_animationType="None"

        app:sv_doneCircleColor="@color/green"
        app:sv_doneStepLineColor="@color/black"
        app:sv_doneStepMarkColor="@color/black"
        app:sv_doneTextColor="@color/black"

        app:sv_selectedCircleColor="@color/yellow"
        app:sv_selectedStepNumberColor="@color/black"
        app:sv_selectedTextColor="@color/yellow"

        app:sv_stepPadding="12sp"
        app:sv_typeface="@font/poppinsbold" />

    <com.example.courtnowproject.NonSwipe
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_previous"
        android:layout_below="@+id/step_view"
        android:layout_marginBottom="30sp" />


    <Button
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50sp"
        android:backgroundTint="@color/yellow"
        android:enabled="false"
        android:fontFamily="@font/poppinsbold"
        android:text="Previous" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50sp"
        android:backgroundTint="@color/yellow"
        android:enabled="false"
        android:fontFamily="@font/poppinsbold"
        android:text="Next" />


</RelativeLayout>